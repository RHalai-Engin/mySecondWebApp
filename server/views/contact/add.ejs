<%- include ../partials/header.ejs %>


<%- include ../partials/main_nav.ejs %>

<!--Content for the Add Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField"> Full Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Full Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="addressTextField">Address</label>
                    <input type="address" class="form-control"
                    id="addressTextField"
                    placeholder="Enter Address"
                    name="address" required>
                </div>

                <div class="form-group">
                    <label for="countryTextField">Country</label>
                    <input type="text" class="form-control"
                    id="countryTextField"
                    placeholder="Enter Country or Region"
                    name="country" required>
                </div>

                <div class="form-group">
                    <label for="contactTextField">Contact Number</label>
                    <input type="tel" class="form-control"
                    id="contactTextField"
                    placeholder="Enter Contact Number"
                    name="contact" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="email" class="form-control"
                    id="emailTextField"
                    placeholder="Enter Email Address"
                    name="email" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/contact-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>


