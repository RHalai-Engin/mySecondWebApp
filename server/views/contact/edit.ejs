<%- include ../partials/header.ejs %>


<%- include ../partials/main_nav.ejs %>

<!--Content for the Edit Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Full Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Full Name"
                    name="name" 
                    value="<%= contact.name%>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Address</label>
                    <input type="text" class="form-control"
                    id="addressTextField"
                    placeholder="Enter Address"
                    name="address" 
                    value="<%= contact.address%>"
                    required>
                </div>

                <div class="form-group">
                    <label for="countryTextField">Country</label>
                    <input type="text" class="form-control"
                    id="countryTextField"
                    placeholder="Enter Country or Region"
                    name="country" 
                    value="<%= contact.country%>"
                    required>
                </div>

                <div class="form-group">
                    <label for="contactTextArea">Contact Number</label>
                    <textarea type="tel" class="form-control"
                    id="contactTextArea"
                    placeholder="Enter Contact Number"
                    name="contact" 
                    required><%= contact.contact%></textarea>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter Email Address"
                    name="email" 
                    value="<%= contact.email%>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/contact-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>


<%-include  ../partials/bottom_nav.ejs %>  
<br>
<%-include  ../partials/footer.ejs %>